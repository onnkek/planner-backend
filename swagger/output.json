{
  "swagger": "2.0",
  "info": {
    "title": "Planner API",
    "description": "This API is interface for interaction with tasks, badges and notes for planner",
    "version": "1.0.0"
  },
  "host": "localhost:8000",
  "basePath": "/",
  "schemes": [
    "http"
  ],
  "paths": {
    "/tasks": {
      "get": {
        "description": "Get all active tasks",
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "post": {
        "description": "Endpoint added task.",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Data of task.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "body": {
                  "type": "string",
                  "example": "Test task"
                },
                "deadline": {
                  "type": "string",
                  "example": "2024-03-13T16:38"
                },
                "link": {
                  "type": "string",
                  "example": "https://google.com"
                },
                "badges": {
                  "type": "array",
                  "items": {
                    "type": "object",
                    "properties": {
                      "id": {
                        "type": "number",
                        "example": 3
                      },
                      "color": {
                        "type": "number",
                        "example": 2
                      },
                      "text": {
                        "type": "string",
                        "example": "Пробую сделать"
                      }
                    }
                  }
                }
              },
              "required": [
                "body",
                "deadline"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/notes": {
      "get": {
        "description": "Get all notes",
        "responses": {
          "default": {
            "description": ""
          }
        }
      },
      "post": {
        "description": "Endpoint added note.",
        "consumes": [
          "application/json"
        ],
        "produces": [
          "application/json"
        ],
        "parameters": [
          {
            "name": "body",
            "in": "body",
            "description": "Body of note.",
            "required": true,
            "schema": {
              "type": "object",
              "properties": {
                "body": {
                  "type": "string",
                  "example": "<p>Test body</p>"
                }
              },
              "required": [
                "body"
              ]
            }
          }
        ],
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    },
    "/badges": {
      "get": {
        "description": "Get all notes",
        "responses": {
          "default": {
            "description": ""
          }
        }
      }
    }
  },
  "definitions": {
    "Task": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 34
        },
        "body": {
          "type": "string",
          "example": "123"
        },
        "create": {
          "type": "string",
          "example": "1690207761767"
        },
        "remove": {
          "type": "string",
          "example": ""
        },
        "timeleft": {
          "type": "string",
          "example": ""
        },
        "deadline": {
          "type": "string",
          "example": ""
        },
        "link": {
          "type": "string",
          "example": ""
        },
        "visible": {
          "type": "boolean",
          "example": false
        },
        "badges": {
          "type": "array",
          "example": [],
          "items": {}
        }
      }
    },
    "Tasks": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Task"
      }
    },
    "Badge": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 3
        },
        "color": {
          "type": "number",
          "example": 2
        },
        "text": {
          "type": "string",
          "example": "Пробую сделать"
        }
      }
    },
    "Badges": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Badge"
      }
    },
    "Note": {
      "type": "object",
      "properties": {
        "id": {
          "type": "number",
          "example": 1
        },
        "body": {
          "type": "string",
          "example": "<h1>Тут будет HTML текст заметки</h1>"
        },
        "create": {
          "type": "string",
          "example": "1690207761767"
        },
        "visible": {
          "type": "boolean",
          "example": true
        }
      }
    },
    "Notes": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Note"
      }
    }
  }
}